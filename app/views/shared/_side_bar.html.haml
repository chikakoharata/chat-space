.side-bar
  .side-bar__user-name
    .side-bar__header
      %h3.side-bar__header__name
        = current_user.name
      %ul.side-bar__header__icon
        %li.side-bar__header__icon__new-group
          = link_to new_group_path do
            = icon('fas', 'edit',class: 'icon')
        %li.side-bar__header__icon__user-edit
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            =group.name 
          .group__message
            = group.show_last_message